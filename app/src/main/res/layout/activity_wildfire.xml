<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <View
        android:id="@+id/myRectangleView"
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/archive"
        android:text="AVERT"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/myRectangleView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/myRectangleView" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/myRectangleView"
        app:layout_constraintTop_toTopOf="@id/myRectangleView" />

    <TextView
        android:id="@+id/wildfire_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/leaguespartan"
        android:text="Wildfire"
        android:textColor="@color/blue"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/josefinsansreg"
        android:text="Level 1"
        android:textColor="@color/blue"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/campfire_button"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/campfire_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/antic"
        android:text="@string/campfire_button"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campfire_button" />

    <ImageButton
        android:id="@+id/campfire_button"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="125dp"
        android:backgroundTint="@color/lightGrey"
        android:scaleType="fitCenter"
        android:src="@drawable/campfire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wildfire_title" />

    <TextView
        android:id="@+id/level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/josefinsansreg"
        android:text="Level 2"
        android:textColor="@color/blue"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/house_button"
        app:layout_constraintStart_toEndOf="@+id/level1" />

    <TextView
        android:id="@+id/house_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/antic"
        android:text="Home fire safety"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/campfire_title"
        app:layout_constraintTop_toBottomOf="@+id/house_button" />

    <ImageButton
        android:id="@+id/house_button"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="125dp"
        android:backgroundTint="@color/lightGrey"
        android:fontFamily="@font/josefinsansreg"
        android:scaleType="fitCenter"
        android:src="@drawable/extinguisher"
        android:text="Level 2: Fire Safety at Home"
        android:textColor="@color/lightBlue"
        app:layout_constraintStart_toEndOf="@+id/campfire_button"
        app:layout_constraintTop_toBottomOf="@+id/wildfire_title" />

</androidx.constraintlayout.widget.ConstraintLayout>