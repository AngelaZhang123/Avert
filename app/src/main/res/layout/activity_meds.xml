<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/lightGrey"
    android:layout_height="match_parent"
    tools:context=".MedsActivity">



    <View
        android:id="@+id/myRectangleView"
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/yellow"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/archive"
        android:text="AVERT"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/myRectangleView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/myRectangleView" />
    <ImageButton
        android:id="@+id/logoM"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/myRectangleView"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myRectangleView"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/medsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/archive"
        android:gravity="center"
        android:text="Medications"
        android:textAllCaps="false"
        android:textColor="#ff5757"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/editB"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editB"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:background="@color/yellow"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/medT1"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:fontFamily="@font/archive"
        android:textAllCaps="false"
        android:textColor="#ff5757"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="230dp"
        android:text="Medication 1:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_Button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:background="@color/yellow"
        android:text="Add Medication"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc1"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Description:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medT1" />



    <EditText
        android:id="@+id/med1"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="230dp"
        android:ems="10"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/medT1"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/medI1"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:fontFamily="@font/archive"
        android:textAllCaps="false"
        android:textColor="#ff5757"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="230dp"
        android:ems="10"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/medT1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/medD1"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/med1" />

    <TextView
        android:id="@+id/medDI1"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/med1" />

    <TextView
        android:id="@+id/medI2"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:fontFamily="@font/archive"
        android:textAllCaps="false"
        android:textColor="#ff5757"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/medT1"
        app:layout_constraintTop_toBottomOf="@+id/medD1" />

    <TextView
        android:id="@+id/medI3"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:fontFamily="@font/archive"
        android:textAllCaps="false"
        android:textColor="#ff5757"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/medT1"
        app:layout_constraintTop_toBottomOf="@+id/medDI2" />

    <TextView
        android:id="@+id/medDI2"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/medI2" />

    <TextView
        android:id="@+id/medDI3"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/medI3" />

    <EditText
        android:id="@+id/med2"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/medT1"
        app:layout_constraintTop_toBottomOf="@+id/medD1" />

    <EditText
        android:id="@+id/med3"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/medT1"
        app:layout_constraintTop_toBottomOf="@+id/medDI2" />

    <EditText
        android:id="@+id/medD2"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/medI2" />

    <EditText
        android:id="@+id/medD3"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/med3" />

    <TextView
        android:id="@+id/medT2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/archive"
        android:textAllCaps="false"
        android:textColor="#ff5757"
        android:textSize="15dp"
        android:text="Medication 2:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc1" />

    <TextView
        android:id="@+id/medT3"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/archive"
        android:textAllCaps="false"
        android:textColor="#ff5757"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:text="Medication 3:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc2" />

    <TextView
        android:id="@+id/desc2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Description:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medT2" />

    <TextView
        android:id="@+id/desc3"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Description:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medT3" />


</androidx.constraintlayout.widget.ConstraintLayout>